
  <h2>Welcome! </h2>
  <h3><%= link_to @current_user.username, user_account_path(@current_user) %></h3>
  <p>Joined site <%= @current_user.created_at.to_date %></p>



  <div class="container" style="margin-top: 5rem">
    <ul class="nav nav-tabs">
      <li class="nav-item">
        <%= link_to "Account Information", user_account_path(@current_user.id), class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "Order History", order_history_path(@current_user.id), class: "nav-link active" %>
      </li>
      <li class="nav-item">
        <%= link_to "Manage Trips", manage_tours_path(@current_user.id), class: "nav-link" %>
      </li>
    </ul>
  </div>

  <div class="container" style="margin-top: 5rem">

    <table class="table table-hover">
      <thead>
      <tr>
        <th>Tour ID</th>
        <th>Quantity of Tours</th>
        <th>Date</th>
        <th>Price</th>
      </tr>
      </thead>

      <tbody>
      <%@orders.each do |order| %>
        <tr>
          <td><%= link_to "#{order.id}", order_path(order) %></td>
          <td><%= order.order_items.size %></td>
          <td><%= order.created_at %></td>
          <td>need "total" attribute?</td>
        </tr>
      <%end %>
      </tbody>
    </table>

  </div>

<h2>Welcome! </h2>
<h3><%= link_to @current_user.username, user_account_path(@current_user) %></h3>
<p>Joined site <%= @current_user.created_at.to_date %></p>

<div class="container" style="margin-top: 5rem">
  <ul class="nav nav-tabs">
    <li class="nav-item">
      <%= link_to "Account Information", user_account_path(@current_user.id), class: "nav-link" %>
    </li>
    <li class="nav-item">
      <%= link_to "Order History", order_history_path(@current_user.id), class: "nav-link" %>
    </li>

    <li class="nav-item">
      <%= link_to "Manage Trips", manage_tours_path(@current_user.id), class: "nav-link active" %>
    </li>

    <li class="nav-item">
      <%= link_to "Retail History", retail_history_path(@current_user.id), class: "nav-link" %>
    </li>
  </ul>
</div>

<div class="container" style="margin-top: 2rem"><%= link_to "Add Tour", new_product_path, class: "btn btn-primary " %></div>

<div class="container" style="margin-top: 2rem">

  <% if @products.nil? || @products.empty? %>
    <p>You don't have tours yet, go ahead and add one!</p>
    <% else %>

  <table class="table table-hover">
    <thead>
    <tr>
      <th>Tour ID</th>
      <th>Name</th>
      <th>Rating</th>
      <th>Price</th>
      <th>Edit</th>
      <th>Retire</th>
    </tr>
    </thead>

    <tbody>
    <%@products.each do |product| %>
      <tr>
        <td><%= link_to "#{product.id}", product_path(product) %></td>
        <td><%= product.name %></td>
        <td><%= product.avg_rating %></td>
        <td><%= product.price %></td>
        <td><%= link_to "Edit", edit_product_path(product), class: "btn btn-primary" %></td>
        <% if product.active %>
          <td><%= link_to "Retire", retire_path(product), class: "btn btn-primary", method: :post%></td>
        <% else %>
          <td><%= link_to "Reactivate", retire_path(product), class: "btn btn-primary", method: :post%></td>
        <% end %>

      </tr>
    <%end %>
    </tbody>
  </table>
    <% end %>



</div>
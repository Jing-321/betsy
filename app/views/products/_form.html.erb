<%= form_with model: @product do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :price %>
    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text">$</span>
      </div>
      <%= f.text_field :price, class: "form-control" %>
      <div class="input-group-append">
        <span class="input-group-text">.00</span>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :stock %>
    <%= f.text_field :stock, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :categories %>
    <%= collection_check_boxes(:product, :category_ids, Category.all, :id, :name) do |b|%>
      <%= b.label(class: "check-box-label") { b.check_box + b.text} %>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :photo_url %>
    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text" id="basic-addon3">https://example.com/users/</span>
      </div>
    <%= f.text_field :photo_url, class: "form-control" %>
    </div>
  </div>



  <div class="form-group">
    <%= f.submit "#{action_name} Tour", class: "btn btn-primary" %>
  </div>
<% end %>
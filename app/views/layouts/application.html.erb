<!DOCTYPE html>
<html>
  <head>
    <title>Tripsy</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class ="navbar navbar-light bg-light navbar-expand-md">
      <%= link_to "Tripsy", root_path, class: "navbar-brand"%>
      <button class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">Menu</button>
      <div class="collapse navbar-collapse" id="navbarCollapse">
        <ul class="navbar-nav ml-auto">
          <li class="navbar-item"> <%= link_to "Home", root_path, class: "nav-link"%></li>
          <li class="navbar-item"> <%= link_to "All Products", products_path, class: "nav-link"%></li>
          <li class="navbar-item"> <%= link_to "All TourGuides", users_path, class: "nav-link"%></li>
          <li class="navbar-item"> <%= link_to "Browse by category", root_path, class: "nav-link"%></li>
        </ul>
        <%if session[:user_id].nil? %>
          <%= link_to "Login with GitHub", github_login_path, class: "btn btn-primary" %>
        <%else %>
          <%= link_to "Hello, #{User.find(session[:user_id]).username}", user_account_path, class: "btn btn-primary" %>
          <%= link_to "Logout", logout_path, method: "delete", class: "btn btn-secondary" %>
        <%end %>
        <%if session[:order_id] %>
          <%= link_to "Cart", order_path(session[:order_id]), class: "btn btn-primary" %>
        <%else %>
          <%= link_to "Cart", empty_cart_path, class: "btn btn-primary" %>
        <%end %>
      </div>
    </nav>

    <main>
      <%= yield %>
    </main>



  </body>
</html>


  <h2>Order <%= params[:id] %> </h2>

    <div class="container" style="margin-top: 5rem">

    <table class="table table-hover">
      <thead>
      <tr>
        <th>Tour</th>
        <th>Quantity of Tours</th>
        <th>Date</th>
        <th>Price</th>
      </tr>
      </thead>

      <tbody>
      <%@items.each do |item| %>
        <tr>
          <%product = Product.find(item.product_id) %>
          <td><%= link_to "#{product.name}", product_path(item.product_id) %></td>
          <td><%= item.quantity %></td>
          <td><%= item.created_at %></td>
          <td><%= product.price %></td>
        </tr>
      <%end %>
      </tbody>
    </table>
    <%= link_to "Back to #{User.find(session[:user_id]).username} account", user_account_path, class: "btn btn-primary" %>
  </div>






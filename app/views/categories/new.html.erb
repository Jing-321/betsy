<div class="container"><h2 class="center">Add New Category</h2></div>
<div class="container">
<%= form_with model: @category do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit "Add Category", class: "btn btn-primary" %>
  </div>
<% end %>
</div>